@model HolidayManagement.Models.DashboardViewModels

<div style="position:relative">
     <div style="float:left; width: 30% ; ">
        <button class="btn btn-danger pull-left" style="margin: 15px" data-bind="click: minusMonth">Previous</button>
        
    </div>
    <div style="float:left; width: 25%; text-align:center;">
        <h3  data-bind="text: year() + '  ' +monthName()"></h3>
    </div>
    <div style="float:left; width: 30%; ">
        <button class="btn btn-danger pull-right" style="margin: 15px" data-bind="click: plusMonth">Next</button>
    </div>
    <button class="btn btn-danger pull-left" style="margin: 15px" data-toggle="modal" data-target="#myModal2" data-bind="click:">Add new Holiday</button>
</div>

<table class="table table-hover ">
   
    <tbody  data-bind="foreach: monthDays">
            <tr data-bind="css: {'bankHoliday': description() != null && description() != 'Weekend' && isFreeDay(),
                                 'weekend': isFreeDay()}">
            <td data-bind="text: day" style="text-align:center"></td>
            <td data-bind="text: nameOfDay" style="text-align:center"></td>
            <td data-bind="text: description" style="text-align:center"></td>
            </tr>
    </tbody>
</table>


<div class="modal fade" id="myModal2" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h3 class="modal-title" style="text-align:center">Add vacation</h3>
                <h4 id="errr" style="color : red"> </h4>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label class="control-label">From Date</label>
                    <div>
                        <input type="date" class="form-control input-lg" name="StartDate" data-bind="value: vacation.StartDate" >
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label">To Date</label>
                    <div>
                        <input type="date" class="form-control input-lg" name="EndDate" data-bind="value: vacation.EndDate">
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-bind="click:addHoliday">Add</button>
               
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>

        </div>
    </div>

</div>